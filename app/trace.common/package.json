  "bugs": {
    "url": "https://github.com/elevenClouds/trace/issues"
  },
  "homepage": "https://trace.ng",
  "devDependencies": {
    "typescript": "^4.6.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "preset": "ts-jest",
    "automock": false,
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "setupFiles": [
      "../../setupJest.ts"
    ]
  },
  "engines": {
    "node": "^18 || ^16 || ^14",
    "npm": ">= 6.13.4",
