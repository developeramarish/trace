    "build": "pnpm clean && tsc",
    "clean": "rm -rf dist",
    "test": "NODE_ENV=unittest pnpm jest",
    "lint": "pnpm eslint --ext .js,.jsx,.ts,.tsx ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elevenClouds/trace.git"
  },
