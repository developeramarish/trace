{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "monorepo": true,
  "root": "apps/gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json",
    "watchAssets": true,
    "assets": [
      {
        "include": "**/*.graphql",
        "watchAssets": true
      },
      {
        "include": "**/*.yaml",
        "watchAssets": true
      },
      {
        "include": "**/*.yml",
        "watchAssets": true
      },
      {
        "include": "**/*.html",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "manager": {
      "type": "application",
      "root": "apps/manager",
      "entryFile": "main",
      "sourceRoot": "apps/manager/src",
      "compilerOptions": {
        "webpack": false,
        "tsConfigPath": "apps/manager/tsconfig.app.json"
      }
    },
    "module": {
      "type": "library",
      "root": "libs/module",
      "entryFile": "index",
      "sourceRoot": "libs/module/src",
      "compilerOptions": {
        "tsConfigPath": "libs/module/tsconfig.lib.json"
      }
    }
  }
}
