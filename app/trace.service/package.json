{
  "name": "@trace/service",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/elevenClouds/trace.git"
  },
  "author": "radioActive DROID <me@godwin.dev>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/elevenClouds/trace/issues"
  },
  "homepage": "https://github.com/elevenClouds/trace#readme",
  "scripts": {
    "setup": "rimraf node_modules && pnpm install",
    "prebuild": "rimraf dist",
    "dev": "nest start --watch",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "ts-node src/index.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "clean": "rimraf dist/*",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/trace-service/test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm -d ormconfig.ts"
  },
  "dependencies": {
    "@apollo/federation": "^0.36.1",
    "@apollo/subgraph": "^2.0.5",
    "@nestjs/apollo": "^10.0.14",
    "@nestjs/common": "^8.4.6",
    "@nestjs/core": "^8.4.6",
    "@nestjs/graphql": "^10.0.15",
    "@nestjs/microservices": "^8.4.6",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.1.2",
    "apollo-server-express": "^3.8.2",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "geojson": "^0.5.0",
    "graphql": "^16.5.0",
    "graphql-upload": "^15.0.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "typeorm": "0.3.6",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-pg-adjacency-list-tree": "^1.1.0",
    "typeorm-seeding": "^1.6.1",
    "wkx": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/geojson": "^7946.0.8",
    "@types/jest": "27.4.1",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@/module(|/.*)$": "<rootDir>/libs/module/src/$1"
    }
  },
  "engines": {
    "node": "^18 || ^16 || ^14",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1",
    "pnpm": ">=3"
  }
}
